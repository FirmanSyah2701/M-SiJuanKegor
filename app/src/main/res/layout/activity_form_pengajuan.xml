<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Menu_login">
   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/colororen">
        <ImageButton
            android:id="@+id/imgBtnKembali"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@color/colororen"
            android:src="@drawable/kembali"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HIMATIF"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:text="Himpunan Mahasiswa Teknik Informatika"
            android:layout_marginLeft="20dp"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorputih">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kode Pengajuan"
            android:textSize="20sp">
        </TextView>
        <EditText
            android:id="@+id/edit_kdpengajuan"
            android:layout_marginTop="40dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Masukan kode pengajuan">
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Nama Kegiatan"
            android:textSize="20sp">
        </TextView>
        <EditText
            android:id="@+id/edit_nama"
            android:layout_marginTop="140dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Masukan Nama Kegiatan">
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Pengajuan"
            android:textSize="20sp"
            android:layout_marginTop="210dp">
        </TextView>

        <EditText
            android:id="@+id/edit_tanggal"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:hint="Masukan Tanggal Pengajuan"
            android:inputType="date"></EditText>

        <Button
            android:id="@+id/btn_batal"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="310dp"
            android:background="#FF0000"
            android:textSize="12sp"
            android:text="Batal"
            android:textColor="@color/colorputih">
        </Button>
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="310dp"
            android:layout_marginLeft="150dp"
            android:textSize="12sp"
            android:background="#007944"
            android:text="Tambah"
            android:textColor="@color/colorputih">
        </Button>
    </RelativeLayout>

</LinearLayout>